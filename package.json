{
  "name": "deri-app",
  "version": "0.0.1",
  "private": true,
  "author": "DeriLab <golang.rs@gmail.com>",
  "license": "Unlicense",
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "CI=true react-app-rewired test --env=jsdom",
    "eject": "react-app-rewired eject",
    "lint": "eslint src/**/*.js",
    "lint:ci": "eslint src/**/*.js --max-warnings=0",
    "lint:fix": "eslint --fix src/**/*.js",
    "predeploy": "yarn build",
    "deploy": "gh-pages -d build -m '[ci skip] Updates'"
  },
  "dependencies": {
    "@polkadot/api": "~3.3.2",
    "@polkadot/extension-dapp": "~0.36.1",
    "@polkadot/keyring": "~5.2.3",
    "@polkadot/types": "~3.3.2",
    "@polkadot/ui-keyring": "~0.65.1",
    "@polkadot/ui-settings": "~0.65.1",
    "@polkadot/util": "~5.2.3",
    "@polkadot/util-crypto": "~5.2.3",
    "prop-types": "~15.7.2",
    "query-string": "~6.13.8",
    "react": "~17.0.1",
    "react-copy-to-clipboard": "~5.0.2",
    "react-dom": "~17.0.1",
    "react-scripts": "~4.0.1",
    "semantic-ui-css": "~2.4.1",
    "semantic-ui-react": "^2.0.1"
  },
  "devDependencies": {
    "eslint-config-semistandard": "~15.0.1",
    "eslint-config-standard": "~16.0.2",
    "eslint-plugin-import": "~2.22.1",
    "eslint-plugin-node": "~11.1.0",
    "eslint-plugin-only-warn": "~1.0.2",
    "eslint-plugin-promise": "~4.2.1",
    "eslint-plugin-standard": "~5.0.0",
    "gh-pages": "~3.1.0",
    "react-app-rewired": "~2.1.8",
    "semistandard": "~16.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "semistandard"
    ],
    "plugins": [
      "only-warn"
    ],
    "rules": {
      "semi": [
        1,
        "always"
      ],
      "no-extra-semi": 1
    }
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": "https://derilab.github.io/deri-app",
  "bugs": {
    "url": "https://github.com/DeriLab/deri-app/issues"
  },
  "keywords": [
    "deri-app",
    "substrate",
    "substrate-ui",
    "polkadot-js"
  ]
}
